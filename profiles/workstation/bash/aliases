# {{{ Misc
##DOS to Unix
alias d2u='find . -type f \! -path \*/\.svn/\* -exec dos2unix {} \;'
## Purge Backup files
alias pbkp='find ./ -name '*~' | xargs rm'
# }}}

# {{{ Remove .DS_Store files Recursively
alias cleanupds="find . -type f -name '*.DS_Store' -ls -delete"
# }}}


